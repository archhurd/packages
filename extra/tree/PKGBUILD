# $Id: PKGBUILD 64857 2010-01-22 13:46:23Z giovanni $
# Maintainer: Giovanni Scafora <giovanni@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=tree
pkgver=1.5.3
pkgrel=1
pkgdesc="A directory listing program displaying a depth indented list of files"
arch=('i686')
url="http://mama.indstate.edu/users/ice/tree/"
license=('GPL')
depends=('glibc')
source=(ftp://mama.indstate.edu/linux/tree/${pkgname}-${pkgver}.tgz)
md5sums=('c07ce9065667a23f27aca4de8ecccb10')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make || return 1
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  make prefix="${pkgdir}/" MANDIR="${pkgdir}/share/man/man1" install || return 1
}

